@page "/productsdetail/{productid}"

<h3 class="page-title">Details van @Product.Name</h3>

<div class ="col-12 row">
    <div class="col-2">
        <img src="~/Assets~/Assets/cupcake.png" />
    </div>
    <div class="col-10 row">
        <div class="col-xs-12 col-sm-8">
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Product ID</label>
                <div class="col-sm-8">
                    <label type="text" class="form-control-plaintext">@Product.Id</label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Naam</label>
                <div class="col-sm-8">
                    <label type="text" class="form-control-plaintext">@Product.Name</label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Omschrijving</label>
                <div class="col-sm-8">
                    <label type="text" class="form-control-plaintext">@Product.Description</label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Categorie</label>
                <div class="col-sm-8">
                    <label type="text" class="form-control-plaintext">@Category</label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Prijs</label>
                <div class="col-sm-8">
                    <label type="text" class="form-control-plaintext">@Product.Price euro</label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Dieetvereisten</label>
                @foreach(var dr in Product.DietaryRequirements)
                {
                    <div class="col-sm-8">
                        <label type="text" class="form-control-plaintext">@dr</label>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
