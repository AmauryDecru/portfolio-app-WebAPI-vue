<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Imi.Project.Mobile.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="MainPink">#F3B497</Color>
            <Color x:Key="SecondaryPink">#C16957</Color>

            <OnPlatform x:Key="DefaultThickness" x:TypeArguments="Thickness">
                <On Platform="iOS" Value="0"></On>
                <On Platform="Android" Value="0"></On>
                <On Platform="UWP" Value="20"></On>
            </OnPlatform>
            <Style x:Key="MainLayout" TargetType="TabbedPage">
                <Setter Property="Padding" Value="{StaticResource DefaultThickness}" />
                <Setter Property="BackgroundColor" Value="{StaticResource MainPink}"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>